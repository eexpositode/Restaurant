<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".activities.RestaurantActivity_">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/default_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_banner_height"
            android:layout_marginBottom="@dimen/default_padding"
            android:background="@color/blue_grey_400"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/default_padding"
            android:paddingStart="@dimen/default_padding">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_padding"
                android:src="@drawable/ic_check_box_outline_blank_black_56dp"
                android:tint="@color/white"/>

            <TextView
                android:id="@+id/selected_table_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="@dimen/default_headline_text_size"
                tools:text="Table 2"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/create_reservation_select_customer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_banner_height"
            android:layout_marginBottom="@dimen/default_padding"
            android:background="@color/blue_grey_400"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/default_padding"
            android:paddingStart="@dimen/default_padding">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_padding"
                android:src="@drawable/ic_person_black_56dp"
                android:tint="@color/white"/>

            <TextView
                android:id="@+id/selected_customer_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/reservations_select_customer"
                android:textColor="@color/white"
                android:textSize="@dimen/default_headline_text_size"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/create_reservation_select_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_banner_height"
            android:background="@color/blue_grey_400"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/default_padding"
            android:paddingStart="@dimen/default_padding">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_padding"
                android:src="@drawable/ic_watch_later_black_56dp"
                android:tint="@color/white"/>

            <TextView
                android:id="@+id/selected_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/reservations_select_time"
                android:textColor="@color/white"
                android:textSize="@dimen/default_title_text_size"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>